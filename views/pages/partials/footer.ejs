<script>
    const socket = io(`ws://${window.location.host}`, {
        cors: {
            origin: "*",
        },
        token: getCookie('_atk')
    });
    socket.emit('ready', {
        token: getCookie('_atk')
    })
    socket.on('request', data => {
        $('#requests').append($('<li>').text(`${data.request.address.address} : ${data.request.question[0].name}`));
